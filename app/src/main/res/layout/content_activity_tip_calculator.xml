<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_tip_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.etudiant.myapplication.ConvertorDevise">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="100"
            android:ems="10"
            android:layout_marginTop="39dp"
            android:id="@+id/editText_withoutTip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/editText_withoutTip"
            android:layout_alignStart="@+id/editText_withoutTip"
            android:layout_marginTop="43dp"
            android:id="@+id/editText_tipPercentage"
            android:numeric="integer"
            android:text="15" />

        <TextView
            android:text="Total avec pourboire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_WithTip"
            android:layout_below="@+id/textView_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:text="Pourboire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_tip"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/editText_tipPercentage"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


